# ===========================================
# LaTeX Resume Agent - Environment Configuration
# ===========================================

# Application
APP_NAME=latex-resume-agent
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/latex_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=latex_agent

# Redis
REDIS_URL=redis://localhost:6379/0

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_data

# Gemini API Keys (rotation pool) - Add your keys here
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=
GEMINI_API_KEY_4=
GEMINI_API_KEY_5=
GEMINI_API_KEY_6=

# Gemini Model Configuration
GEMINI_MODEL=gemini-1.5-pro
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=8192

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# LaTeX Compilation
LATEX_COMPILER_TIMEOUT=30
LATEX_COMPILER_MEMORY_LIMIT=256m

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
