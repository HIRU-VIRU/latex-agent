# Backend Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For SQLite (simple, good for small deployments):
DATABASE_URL=sqlite+aiosqlite:///./latex_agent.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/latex_agent

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8001

# =============================================================================
# GEMINI API KEYS (3-key rotation for rate limiting)
# =============================================================================
# REPLACE THESE WITH YOUR OWN KEYS!
GEMINI_API_KEY_1=your_gemini_api_key_1
GEMINI_API_KEY_2=your_gemini_api_key_2
GEMINI_API_KEY_3=your_gemini_api_key_3

# =============================================================================
# GITHUB OAUTH CONFIGURATION
# =============================================================================
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# For development:
# GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# For production (update with your actual domain):
GITHUB_CALLBACK_URL=https://your-domain.com/api/auth/callback/github

# =============================================================================
# JWT SECRET (CRITICAL: Generate a new one for production!)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# LINKEDIN (Optional - for LinkedIn profile scraping)
# =============================================================================
# LINKEDIN_EMAIL=your_linkedin_email
# LINKEDIN_PASSWORD=your_linkedin_password
